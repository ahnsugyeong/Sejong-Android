<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/item_home_dodream_iv"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sample_image" />

    <TextView
        android:id="@+id/item_home_dodream_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_home_dodream_iv"
        android:layout_alignStart="@id/item_home_dodream_iv"
        android:layout_alignEnd="@id/item_home_dodream_iv"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_home_dodream_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_home_dodream_from_tv"
        android:layout_alignStart="@id/item_home_dodream_iv"
        android:layout_alignEnd="@id/item_home_dodream_iv"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="12sp" />
</RelativeLayout>