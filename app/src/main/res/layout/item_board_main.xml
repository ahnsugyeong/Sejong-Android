<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_board_main_object"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_board_main_profileImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/item_board_main_userName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="userName" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/item_board_main_headCount"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:text="3 / 4" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_board_main_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:text="title"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_board_main_description"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:text="description"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_board_main_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="left"

            android:text="2022.09.13 20:05:25"
            android:textSize="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/item_board_main_heartNum"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:text="1" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/item_board_main_commentNum"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:text="3" />

    </LinearLayout>

</LinearLayout>